# Provider selection: ollama, openai, or openrouter
PROVIDER=ollama

# Database settings
DATABASE__HOST=localhost
DATABASE__PORT=5432
DATABASE__USER=postgres
DATABASE__PASSWORD=admin
DATABASE__DATABASE=pydantic_ai_rag

# Ollama settings
OLLAMA__BASE_URL=http://localhost:11434
OLLAMA__COMPLETION_MODEL=nemotron-mini:latest
OLLAMA__EMBEDDING_MODEL=nomic-embed-text
OLLAMA__EMBEDDING_DIMENSIONS=768

# OpenAI settings (required if PROVIDER=openai)
# OPENAI__API_KEY=your-openai-api-key
# OPENAI__ORGANIZATION_ID=your-org-id  # Optional
# OPENAI__BASE_URL=https://api.openai.com/v1
# OPENAI__COMPLETION_MODEL=gpt-3.5-turbo
# OPENAI__EMBEDDING_MODEL=text-embedding-3-small
# OPENAI__EMBEDDING_DIMENSIONS=1536

# OpenRouter settings (required if PROVIDER=openrouter)
# OPENROUTER__API_KEY=your-openrouter-api-key
# OPENROUTER__BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER__COMPLETION_MODEL=openrouter/auto
# OPENROUTER__EMBEDDING_MODEL=openai/text-embedding-3-small
# OPENROUTER__EMBEDDING_DIMENSIONS=1536

# Application settings
LOG_LEVEL=INFO
LOGFIRE_TOKEN=replace-with-logfire-token
